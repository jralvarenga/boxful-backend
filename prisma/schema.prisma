
generator client {
  provider = "prisma-client-js"
  output   = "../src/db/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  firstName   String?
  lastName    String?
  gender      String
  birthDate   DateTime
  phoneNumber String
  password    String
  createdAt   DateTime @default(now())
  Order       Order[]
}

model Order {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  user              User      @relation(fields: [userId], references: [id])
  userId            String    @db.ObjectId
  collectionAddress String
  scheduledDate     DateTime
  firstName         String?
  lastName          String?
  email             String
  phoneNumber       String
  recipientAddress  String
  department        String
  municipality      String
  referencePoint    String
  instructions      String
  createdAt         DateTime  @default(now())
  Product           Product[]
}

model Product {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String   @db.ObjectId
  length    Float
  height    Float
  width     Float
  weight    Float
  content   String
  createdAt DateTime @default(now())
}
